#Questão 03

x = float(input('Digite o valor de x: '))
y = float(input('Digite o valor de y: '))

if (x == 0 and y == 0):
    print ('Ponto de origem')
elif (x == 0):
    print ('Ponto no eixo y')
elif (y == 0):
    print('Ponto no eixo x')
else:
    if (x > 0 and y > 0):
        print ('Primeiro quadrante')
    elif (x > 0 and y < 0):
        print ('Quarto quadrante')
    elif (x < 0 and y > 0):
        print ('Segundo quadrante')
    else:
        print ('Terceiro quadrante')

#Questão 04

valor = input('Digite um valor ').upper()
invertido = ''

for x in valor:
    invertido = x + invertido
if invertido == valor:
    print('{0} é Plalindromo'.format(valor))
else:
    print('{0} Não é palindromo'.format(valor))
    
# Questão 05:

height = 5
width = 4
contador = 1
while contador <= height:
    print('*'*width)
    contador +=1
# Questão 03:

vogais = 'aeiouáéíóúãõ'
frase = input('Digite uma frase ').lower()
contador = 0
for x in frase:
    if (x in vogais):
        contador += 1
print ('A frase possui {0} vogais'.format(contador))
